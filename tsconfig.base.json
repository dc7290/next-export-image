{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "outDir": "lib",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "paths": {
      "@next-export-image/plugin": ["./packages/next-export-image-plugin"],
      "next-export-image": ["./packages/next-export-image"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true
  }
}
